{
  "name": "kanban-md",
  "displayName": "Kanban.md",
  "description": "Transform your Markdown files into powerful, interactive Kanban boards",
  "publisher": "wguilherme",
  "version": "0.1.2",
  "engines": {
    "vscode": "^1.106.0"
  },
  "categories": [
    "Visualization",
    "Other"
  ],
  "keywords": [
    "markdown",
    "kanban",
    "task management",
    "project management",
    "todo",
    "productivity",
    "cursor available"
  ],
  "icon": "./imgs/logo.png",
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./dist/extension.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/wguilherme/kanban.md"
  },
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "markdown-kanban",
          "title": "Markdown Kanban",
          "icon": "$(markdown)"
        }
      ]
    },
    "views": {
      "markdown-kanban": [
        {
          "id": "markdown-kanban.boards",
          "name": "Kanban Boards",
          "icon": "$(markdown)"
        }
      ]
    },
    "commands": [
      {
        "command": "markdown-kanban.openKanban",
        "title": "Kanban",
        "category": "Markdown Kanban"
      },
      {
        "command": "markdown-kanban.disableFileListener",
        "title": "Enable/Disable File Switcher",
        "category": "Markdown Kanban"
      },
      {
        "command": "markdown-kanban.refresh",
        "title": "Refresh",
        "icon": "$(refresh)",
        "category": "Markdown Kanban"
      },
      {
        "command": "markdown-kanban.openFromSidebar",
        "title": "Open Kanban Board",
        "icon": "$(open-preview)",
        "category": "Markdown Kanban"
      },
      {
        "command": "markdown-kanban.newKanban",
        "title": "New Kanban Board",
        "icon": "$(add)",
        "category": "Markdown Kanban"
      },
      {
        "command": "markdown-kanban.editMarkdown",
        "title": "Edit Markdown",
        "icon": "$(edit)",
        "category": "Markdown Kanban"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "markdown-kanban.newKanban",
          "when": "view == markdown-kanban.boards",
          "group": "navigation@1"
        },
        {
          "command": "markdown-kanban.refresh",
          "when": "view == markdown-kanban.boards",
          "group": "navigation@2"
        }
      ],
      "view/item/context": [
        {
          "command": "markdown-kanban.editMarkdown",
          "when": "view == markdown-kanban.boards && viewItem == kanbanFile",
          "group": "inline"
        }
      ],
      "editor/title": [
        {
          "command": "markdown-kanban.openKanban",
          "when": "resourceExtname == .md && markdownKanbanActive",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "type": "object",
      "title": "Markdown Kanban",
      "properties": {
        "markdown-kanban.taskHeader": {
          "type": "string",
          "enum": [
            "title",
            "list"
          ],
          "default": "title",
          "description": "Choose how tasks are formatted in the markdown file. 'title' uses ### headers, 'list' uses - bullet points."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "build": "npm run build:extension && npm run build:webview",
    "compile": "npm run check-types && npm run lint && npm run build",
    "watch": "npm-run-all -p watch:*",
    "watch:extension": "vite build --watch --config vite.config.ts",
    "watch:webview": "vite build --watch --config vite.webview.config.ts",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "build:extension": "vite build --config vite.config.ts",
    "build:webview": "vite build --config vite.webview.config.ts",
    "package": "npm run check-types && npm run lint && npm run build:extension -- --mode production && npm run build:webview -- --mode production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint",
    "test": "vscode-test",
    "test:unit": "vitest run",
    "test:unit:watch": "vitest",
    "test:unit:coverage": "vitest run --coverage"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/mocha": "^10.0.6",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.6",
    "@types/react-dom": "^19.2.3",
    "@types/vscode": "^1.106.1",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "@vitejs/plugin-react": "^5.1.1",
    "@vscode/codicons": "^0.0.43",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.5.2",
    "autoprefixer": "^10.4.22",
    "eslint": "^8.56.0",
    "jsdom": "^27.2.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.18",
    "typescript": "^5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-static-copy": "^3.1.4",
    "vitest": "^4.0.14"
  },
  "dependencies": {
    "@dnd-kit/core": "^6.3.1",
    "@dnd-kit/sortable": "^10.0.0",
    "@dnd-kit/utilities": "^3.2.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "zustand": "^5.0.8"
  }
}
